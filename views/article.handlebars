<link rel="stylesheet" type="text/css" href="/assets/css/style.css">

<div class="jumbotron">
  <h1 class="display-4">VG News</h1>
  <hr class="my-4">
  <p>Check out the Latest Industry News</p>
</div>

    {{> nav}}

<div class="container">
    <div class="row"> 
        <h3>{{article.title}}</h3>
        <h5 class="articleBody">{{body}}</h5> 
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12"></div>
            <form action="/comment/{{article._id}}" method="POST" class="col-lg-8">
                <h5>Comment on this Article:</h5>
                <div class="row">
                    <input type="text" class="form-control" name="comment" id="commentBody" aria-describedby="commentHelp" placeholder="Enter Comment">
                    <small id="commentHelp" class="form-text text-muted">Share your comments</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
    </div>

        {{!-- comments go here --}}
    <div class="row">
        <div class="col-lg-12">
            <h5>Comments:</h5>
        </div>
    </div>
    <div class= "row">
        {{#if article.comment}}
        {{#each article.comment}}
            <div class= "col-lg-12">
                {{body}}
            <hr>
            </div>
        {{/each}}
        {{/if}}
    </div>
</div>
